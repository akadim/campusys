{% extends '::admin.html.twig' %}

{% block title %}{{parent()}} - Cours{% endblock %}

{% block body %}
       <div class="alert alert-info">
       {% for flashMessage in app.session.flashBag.get('info') %}
        <div class="mws-form-message success">
          {{ flashMessage }}
          <i class="ui-icon ui-icon-closethick" style="float: right;" onclick="$('.mws-form-message').slideUp();"></i>
        </div>
       {% endfor %}
      </div>
      <form id="form_univ_table" action="{{ path('campusys_cours_delete_selection') }}" method="post">
         <div class="mws-panel grid_8">
                	<div class="mws-panel-header">
                    	<span><i class="icon-table"></i> Liste des cours</span>
                    </div>
                    <div class="mws-panel-toolbar">
                        <div class="btn-toolbar">
                            <div class="btn-group">
                                <a href="{{ path('campusys_cours_edit', {'id': -1}) }}" class="btn"><i class="icol-add"></i> Ajouter</a>
                                <a href="#" class="btn checkAll"><i class="icol-accept"></i> Tout cocher</a>
                                <a href="#" class="btn uncheckAll"><i class="icol-delete"></i> Tout d&eacute;cocher</a>
                                <button class="btn btn_delete_all" type="submit" onclick="if(!confirm('Vous êtes sure de vouloir supprimer la(les) lignes sélectionnées?')) { return false; }"><i class="icol-cross"></i> Supprimer</button>
                            </div>
                        </div>
                    </div>
                    <div class="mws-panel-body no-padding">
                        <table class="mws-datatable mws-table">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Nom</th>
                                    <th>Masse horaire</th>
                                    <th>Module</th>
                                    <th>Active</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="frm_table">
                            {% for cours in courss %}
                                <tr>
                                    <td><input type="checkbox" id="check_form" class="check_frm_select" value="{{cours.id}}"/></td>
                                    <td class="cell_edit texte_name_{{cours.id}}">{{cours.name}}</td>
                                    <td>{{ cours.module.name }}</td>
                                    <td>
                                      <a id="{{cours.id}}" class="active_formation_link" href="#">
                                       {% if cours.active == true %}
                                          <span id ="active_formation_{{cours.id}}" class="badge badge-info">Oui</span>
                                       {% else %}
                                          <span id ="active_formation_{{cours.id}}" class="badge badge-important">Non</span>
                                       {% endif %}
                                      </a>
                                    </td>
                                    <td>
                                        <span class="btn-group">
                                            <a href="" id="view_{{ cours.id }}" class="mws-jui-dialog-mdl-btn view_element btn btn-small"><i class="icon-search"></i></a>
                                            <a href="{{ path('campusys_cours_edit', {'id': cours.id}) }}" class="btn btn-small"><i class="icon-pencil"></i></a>
                                            <a href="{{ path('campusys_cours_delete', {'id': cours.id}) }}" class="btn btn-small confirm_delete" onclick="if(!confirm('Vous êtes sure de vouloir supprimer cette ligne?')) { return false; }"><i class="icon-trash"></i></a>
                                        </span>
                                    </td>
                                </tr>
                            {% endfor %}                 
                            </tbody>
                        </table>
                    </div>
                </div>
               <input type="hidden" name="row_selected" id="row_selected" value=""/>
            </form>
            <div id="mws-jui-dialog">
  
            </div> 
{% endblock %}
